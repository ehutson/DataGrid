<?php if ($this->pageCount > 1): ?>
    <div class="pagination">
        <ul>
            <?php if (isset($this->previous)): ?>
                <li class="prev">
                    <a href="<?= $this->url(array('page' => $this->previous)); ?>">&larr; Previous</a>
                </li>
            <?php else: ?>
                <li class="prev disabled">
                    <a href="#">&larr; Previous</a>
                </li>
            <?php endif; ?>

            <?php foreach ($this->pagesInRange as $page): ?>
                <?php if ($page != $this->current): ?>
                    <li>
                        <a href="<?= $this->url(array('page' => $page)); ?>"><?= $page; ?></a>
                    </li>
                <?php else: ?>
                    <li class="active">
                        <a href="#"><?= $page; ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>

            <?php if (isset($this->next)): ?>
                <li class="next">
                    <a href="<?= $this->url(array('page' => $this->next)); ?>">Next &rarr;</a>
                </li>
            <?php else: ?>
                <li class="next disabled">
                    <a href="#">Next &rarr;</a>
                </li>
            <?php endif; ?>
        </ul>
    </div>
<?php endif; ?>
